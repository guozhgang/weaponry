<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
        "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<constant name="struts.i18n.encoding" value="UTF-8"/>

	<!-- 
		使用Convention插件,实现约定大于配置的零配置文件风格.
	           特殊的Result路径在Action类中使用@Result设定. 
	-->
	<constant name="struts.multipart.maxSize" value="1000000000" />
	<constant name="struts.convention.default.parent.package" value="cce-default" />
	<constant name="struts.convention.package.locators" value="web" />
	<constant name="struts.convention.package.locators.basePackage" value="com.cce.weaponry" />

	<package  name  ="cce-default"  extends ="convention-default"/>

</struts>
